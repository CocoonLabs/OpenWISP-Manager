<div class="grid_16">
  <div class="box">
    <h4><a><%= t(:New_server) %></a></h4>
  </div>
</div>
<div class="clear">&nbsp;</div>

<div class="grid_14 prefix_1 suffix_1">
  <div class="box">
    <h2><a href="#" id="toggle-forms"><%=h t(:New_server) %></a></h2>
    <ul class="nav main">
      <li>
        <%= link_to t(:Back),:back %>
      </li>
    </ul>
    <div class="clear">&nbsp;</div>
    <div class="block" id="server_block">
      <fieldset>
        <legend><%=t :General_infos %></legend>
        <% form_for(@server) do |f| %>
          <p><%= f.error_messages %></p>
          <p>
            <%= f.label :name, t(:Server_name) %><br />
            <%= f.text_field :name %>
          </p>
          <p>
            <%= f.label t(:Notes) %><br />
            <%= f.text_area :notes, :rows => 3 %>
          </p>
          <p>
            <%= f.submit t(:Create) %>
          </p>
        <% end %>
      </fieldset>
    </div>
  </div>
</div>
<div class="clear">&nbsp;</div>
