<div class="grid_15 prefix_1 suffix_1">
  <div class="box">
    <h2><a href="#" id="toggle-forms"><%= t(:X509_certificate) %></a></h2>
    <ul class="nav main">
      <li>
        <%= link_to t(:Back), :back %>
      </li>
    </ul>
    <div class="block" id="certificate_block">
      <p style="font-family:monospace;">
        <%= @x509_certificate.to_text.gsub(/\n/, "<br>").gsub(/ /, "&nbsp;") %>
      </p>
      <p style="font-family:monospace;">
        <%= @x509_certificate.certificate.gsub(/\n/, "<br>").gsub(/ /, "&nbsp;") %>
      </p>
    </div>
  </div>
</div>
<div class="clear">&nbsp;</div>