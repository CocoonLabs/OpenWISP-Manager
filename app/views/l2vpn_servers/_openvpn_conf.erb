mode  server
proto <%=h l2vpn_server.protocol %>

<% if !(l2vpn_server.ip == "all") %>
local <%=h l2vpn_server.ip %>
<% end %>
port  <%=h l2vpn_server.port %>

<% if l2vpn_server.protocol == 'udp' and !l2vpn_server.mtu.nil? %>
fragment <%=h l2vpn_server.mtu - 8 %>
<% end %>
<% if !l2vpn_server.mtu_disc.nil? %>
mtu-disc <%=h l2vpn_server.mtu_disc %>
<% end %>

dev   <%=h l2vpn_server.tap.name %>
dev-type  tap

log-append  /path/to/log/<%=h l2vpn_server.name.gsub(" ", "_") + '.log' %>
status      /path/to/log/<%=h l2vpn_server.name.gsub(" ", "_") + '.stats' %>

<% if l2vpn_server.cipher != 'none' %>
tls-server
cipher      <%=h l2vpn_server.cipher %>
ca          /path/to/<%=h ca_name  + '-ca-crt.pem' %>
#crl-verify /path/to/<%=h ca_name  + '-crl.pem ' %>
cert        /path/to/<%=h ca_name  + '-server-crt.pem ' %>
key         /path/to/<%=h ca_name  + '-server-key.pem ' %>
dh          /path/to/<%=h ca_name  + '-dh1024.pem' %>
tls-auth    /path/to/<%=h ca_name  + '-tls-data-key.pem 0' %>
duplicate-cn
<% end %>

crl-verify /path/to/<%=h ca_name  + '-crl.pem' %>

keepalive    5 15

comp-lzo

user         nobody
group        nogroup

persist-key
persist-tun

verb         1
mute         20

management      127.0.0.1 12122 /path/to/<%=h l2vpn_server.name.gsub(" ", "_") + '-management-pass'%>
management-forget-disconnect