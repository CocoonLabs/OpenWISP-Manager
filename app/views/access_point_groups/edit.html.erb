<div class="grid_16">
  <div class="box">
    <h4><a><%= t(:Editing_access_point_group) %> - <%=h @access_point_group.name %> - <%=h @wisp.name %></a></h4>
  </div>
</div>
<div class="clear">&nbsp;</div>

<div class="grid_14 prefix_1 suffix_1">
  <div class="box">
    <h2><a href="#" id="toggle-forms"><%=h t(:Editing_access_point_group) %></a></h2>
    <ul class="nav main">
      <li>
        <%= link_to t(:Back), :back %>
      </li>
    </ul>
    <div class="clear">&nbsp;</div>
    <div class="block" id="access_point_group_block">
      <fieldset>
        <legend><%=t :General_infos %></legend>

          <% form_for([@wisp, @access_point_group]) do |f| %>
            <p><%= f.error_messages %></p>

            <p>
              <%= f.label t(:Name) %><br />
              <%= f.text_field :name, :maxlength => 32 %>
            </p>
            <p>
              <%= f.label t(:Notes) %><br />
              <%= f.text_area :notes, :rows => 3 %>
            </p>
            <p>
              <% unless @wisp.access_points.nil? or @wisp.access_points.length == 0  %>
                <%= render :partial => 'access_points_select', :locals => { :selected_access_points => @selected_access_points, :access_points => @wisp.access_points } %>
              <% else %>
                <%= t(:No_access_point) %>
              <% end %>
            </p>
            <p>
              <%= f.submit t(:Update) %>
            </p>
          <% end %>
      </fieldset>
    </div>
  </div>
</div>
<div class="clear">&nbsp;</div>