<div class="grid_16">
  <div class="box">
    <h4><a><%= t(:Access_point_group) %> - <%= @access_point_group.name %> - <%=h @wisp.name %></a></h4>
  </div>
</div>
<div class="clear">&nbsp;</div>

<div class="grid_4">
  <div class="box">
    <h2><a href="#"><%=h t(:General_infos) %></a></h2>
    <ul class="nav main">
      <% if auth?(:wisps_manager) || auth?(:access_point_groups_manager, @wisp) %>
          <li><%= link_to t(:Edit), edit_wisp_access_point_group_path(@wisp, @access_point_group) %></li>
      <% end %>
      <li>
        <%= link_to t(:Back),:back %>
      </li>
    </ul>
    <div class="clear">&nbsp;</div>
    <div class="block" id="access_point_group_block">
      <table>
        <tr>
          <td><a><%= t(:Name) %></a></td>
          <td><%=h @access_point_group.name %></td>
        </tr>
        <tr>
          <td colspan="2">&nbsp;</td>
        </tr>
        <tr>
          <td colspan="2"><a><%= t(:Notes) %></a></td>
        </tr>
        <tr>
          <td colspan="2"><%= h(@access_point_group.notes).gsub(/\n/, "<br>") %></td>
        </tr>
      </table>
    </div>
  </div>
</div>

<div class="grid_12">
  <div class="box">
    <h2><a href="#"><%=h t(:Access_points_in_group) %></a></h2>
    <% if @access_point_group.access_points.present?  %>
        <%= render :partial => 'access_points_list', :locals => { :access_points => @access_point_group.access_points }  %>
    <% else %>
        <strong><%= t(:No_access_point) %></strong>
    <% end %>
  </div>
</div>
<div class="clear">&nbsp;</div>
